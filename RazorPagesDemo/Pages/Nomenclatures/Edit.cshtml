@page
@model RazorPagesDemo.Pages.Nomenclatures.EditModel

@{
    ViewData["Title"] = "Edit";
    
}

<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["Nomenclature"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Nomenclature.Id" />
            <div class="form-group">
                <p class="control-label">@Localizer["Name"]</p>
                <input asp-for="Nomenclature.Name" class="form-control" />
                <span asp-validation-for="Nomenclature.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p class="control-label">@Localizer["Price"]</p>
                <input asp-for="Nomenclature.Price" class="form-control" />
                <span asp-validation-for="Nomenclature.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">@Localizer["Back to list"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
