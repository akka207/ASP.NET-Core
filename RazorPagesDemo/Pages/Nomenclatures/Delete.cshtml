@page
@model RazorPagesDemo.Pages.Nomenclatures.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["Nomenclature"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nomenclature.Name)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Price"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nomenclature.Price)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Nomenclature.Id" />
        <input type="submit" value="@Localizer["Submit"]" class="btn btn-danger" /> |
        <a asp-page="./Index">@Localizer["Back to list"]</a>
    </form>
</div>
